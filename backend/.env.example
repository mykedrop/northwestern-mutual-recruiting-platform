# Northwestern Mutual Production Environment Template
# DO NOT commit actual values to version control

NODE_ENV=production

# Database Configuration
DB_HOST=your_production_db_host
DB_PORT=5432
DB_NAME=northwestern_mutual_recruiting
DB_USER=your_production_db_user
DB_PASSWORD=your_secure_production_password

# JWT Configuration - Use cryptographically secure 256-bit keys
# Generate with: openssl rand -hex 32
JWT_ACCESS_SECRET=REPLACE_WITH_SECURE_256_BIT_KEY
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_256_BIT_KEY
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3001
SOCKET_PORT=3002
FRONTEND_URL=https://recruiting.northwesternmutual.com
CLIENT_URL=https://recruiting.northwesternmutual.com

# Redis Configuration
REDIS_HOST=your_production_redis_host
REDIS_PORT=6379
REDIS_URL=redis://your_production_redis_host:6379

# API Keys - MUST be new keys, never expose in code
OPENAI_API_KEY=sk-your_new_openai_key
PINECONE_API_KEY=your_new_pinecone_key
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=recruiting-candidates
SENDGRID_API_KEY=SG.your_new_sendgrid_key
GOOGLE_CSE_ID=your_google_cse_id
GOOGLE_API_KEY=your_new_google_api_key
HUNTER_API_KEY=your_new_hunter_api_key

# Security Settings
ENABLE_HTTPS=true
SECURE_COOKIES=true
TRUST_PROXY=true

# Northwestern Mutual Compliance
AUDIT_LOG_RETENTION_YEARS=7
ENABLE_ENCRYPTION_AT_REST=true
REQUIRE_MFA=true