# Northwestern Mutual Recruiting Platform - Production Environment Variables

# Database (Railway will auto-generate these)
DATABASE_URL=postgresql://user:password@host:port/database
REDIS_URL=redis://user:password@host:port

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-256-bit-key
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-256-bit-key

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-azure-app-id
MICROSOFT_CLIENT_SECRET=your-microsoft-azure-client-secret

# API Configuration
API_BASE_URL=https://your-app-name.railway.app
FRONTEND_URL=https://your-frontend-domain.com
CORS_ORIGIN=https://your-frontend-domain.com

# Northwestern Mutual Configuration
NM_ORGANIZATION_ID=northwestern-mutual-main
NM_ADMIN_EMAIL=admin@northwesternmutual.com

# OpenAI (for AI features)
OPENAI_API_KEY=your-openai-api-key

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@northwesternmutual.com

# Production Settings
NODE_ENV=production
PORT=3001

# File Upload (Railway will handle this)
UPLOAD_MAX_SIZE=10485760

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking